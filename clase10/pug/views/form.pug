extends layout

block formulario

    form(method='POST' action='/api/productos')
     section.p-4(style="border:solid 1px; background-color:rgb(239, 253, 253); width:450px; margin:auto;")
      h2(style="color: blue; margin-bottom:10px;")="Ingrese producto"
      div.mb-3
       label(for='title') Nombre del producto
       input#title.form-control(type='text', placeholder='Nombre del producto' name='title' required)
       label(for='price') Precio
       input#price.form-control(type='number',  placeholder='Nombre del producto' name='price' required)
       label(for='thumbnail') Imagen
       input#thumbnail.form-control(type='text',  placeholder='URL de la imagen' name='thumbnail' required)
       br
       button.btn.btn-secondary(type='submit') Enviar 
       br
      a(href='/api/productos') Listar productos